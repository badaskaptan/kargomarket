{
  // VS Code Performans Optimizasyonu
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.vscode/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.git": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/dist": true
  },
  
  // Extension ayarları
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  
  // Git ayarları
  "git.enabled": true,
  "git.autofetch": false,
  "git.autorefresh": false,
  
  // TypeScript ayarları
  "typescript.updateImportsOnFileMove.enabled": "never",
  "typescript.surveys.enabled": false,
  
  // Copilot ayarları
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": false
  },
  
  // Memory ayarları
  "window.restoreWindows": "none",
  "workbench.enableExperiments": false,
  "workbench.settings.enableNaturalLanguageSearch": false
}
